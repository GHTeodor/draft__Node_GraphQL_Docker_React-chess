<!doctype html>
<html lang="en">
<head>
    <%- include('./partials/head'); %>
    <title>EJS <%= title %></title>
</head>
<body>
<%- include('./partials/navbar'); %>
<div class="container">
    <h1>Hello features EJS</h1>
    <div id="app">
        <form @submit.prevent="createServer">
            <div class="form-group">
                <label for="exampleInputEmail1">|
                    <input class="form-control" type="text" v-model="name" placeholder="..."></label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <div class="spinner-border text-success" role="status" v-if="servers.length === 0">
            <span class="sr-only">Loading...</span>
        </div>
        <ul class="list-group" v-else="">
            <li class="list-group-item" v-for="server in servers" @click="remove(server.id)">
                {{ server.name }}
                <strong>{{ server.status }}</strong>
            </li>
        </ul>
    </div>
</div>

<script src="https://unpkg.com/vue@3"></script>
<!--<script src="https://unpkg.com/vue@next"></script>-->
<script src="/app.js"></script>
</body>
</html>